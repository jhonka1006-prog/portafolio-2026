{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true
  },
  "include": ["vite.config.ts", "vitest.config.ts"]
}
